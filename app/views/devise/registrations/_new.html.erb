
<div id="registration-page"  class="modal-body">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
        <h4 class="text-center">or:</h4>
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <%= f.text_field :name, autofocus: false, id: "icon_name", class: "validate" %>
          <%= f.label 'Your name', for: "icon_name" %><br />
        </div>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= f.email_field :email, autofocus: false, id: "icon_email", class: "validate" %>
          <%= f.label 'Your email', for: "icon_email" %><br />
        </div>
        <div class="input-field">
          <i class="material-icons prefix">fingerprint</i>
          <%= f.password_field :password, autofocus: false, id: "icon_password", class: "validate" %>
          <%= f.label 'Your password', for: "icon_password" %>
        </div>
        <div class="text-center">
          <button type="submit" name="commit" class="btn btn-primary btn-lg btn-ptc waves-effect waves-light">Sign Up</button>
          <button onclick="hideRegistrationPage()" id="login" type="button" class="btn btn-primary btn-lg btn-ptc waves-effect waves-light">Login</button>
          <div class="subscription-checkbox">
            <%= f.check_box :subscribe, id: "subscribe" %>
            <label for="subscribe">
              <p>Subscribe me to Daily Updates</p>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>